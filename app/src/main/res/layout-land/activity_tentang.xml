<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.evand.edu.uulalulintas.tentang"
    style="@style/bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnbantuan"
            android:src="@drawable/tentang"
            android:layout_gravity="center_vertical"
            android:onClick="btnoc1"
            android:background="@drawable/tentang"
            android:layout_marginRight="75dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnpembuat"
            android:layout_gravity="center_vertical"
            android:onClick="btnoc2"
            android:src="@drawable/about"
            android:background="@drawable/about" />
    </LinearLayout>
</RelativeLayout>
